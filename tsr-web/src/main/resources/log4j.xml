<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Console output -->
    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d{MM-dd HH:mm:ss} %m  (%F:%L) \n" />
        </layout>
    </appender>

    <!-- 应用程序输出文件设置 -->
    <appender name="infoLog" class="com.rsos.comm.custom.DailyRollingFileAppenderCustom">
        <param name="File"
            value="${catalina.base}/logs/hxshopManager/hxshopManager.log" />
        <param name="DatePattern" value="'daily.'yyyy-MM-dd'.log'" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="[%d{yyyy-MM-dd HH:mm:ss\} %-5p] [%t] (%c:%L) - %m%n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="levelMin" value="info" />
            <param name="levelMax" value="info" />
        </filter>
    </appender>

    <appender name="errorLog" class="com.rsos.comm.custom.DailyRollingFileAppenderCustom">
        <param name="File"
            value="${catalina.base}/logs/hxshopManager/hxshopManager-error.log" />
        <param name="DatePattern" value="'daily.'yyyy-MM-dd'.log'" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="[%d{yyyy-MM-dd HH:mm:ss\} %-5p] [%t] (%c:%L) - %m%n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="levelMin" value="error" />
        </filter>
    </appender>
    <appender name="paylog" class="com.rsos.comm.custom.DailyRollingFileAppenderCustom">
        <param name="File"
            value="${catalina.base}/logs/hxshopManager/pay.log" />
        <param name="DatePattern" value="'daily.'yyyy-MM-dd'.log'" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="[%d{yyyy-MM-dd HH:mm:ss\} %-5p] [%t] (%c:%L) - %m%n" />
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="levelMin" value="info" />
        </filter>
    </appender>
    <!-- 定义支付日志 -->
    <category name="com.hxshop.manager.pay">
        <priority value="info" />
        <appender-ref ref="paylog" />
    </category>
    <category name="com.hxshop.manager.controller.pay">
        <priority value="info" />
        <appender-ref ref="paylog" />
    </category>
    <category name="com.hxshop.manager.controller.eventPay">
        <priority value="info" />
        <appender-ref ref="paylog" />
    </category>

    <!-- 定义mybatis日志输出级别 -->
    <category name="java.sql">
        <priority value="info" />
    </category>

    <!-- 定义 应用程序日志输出级别 -->
    <category name="com.hxshop">
        <priority value="info" />
        <appender-ref ref="STDOUT" />
    </category>

    <root>
        <priority value="info" />
        <appender-ref ref="infoLog" />
        <appender-ref ref="errorLog" />
    </root>

</log4j:configuration>